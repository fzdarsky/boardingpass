{
  "name": "boardingpass-mobile",
  "version": "1.0.0",
  "description": "BoardingPass Mobile Onboarding App",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "ios": "expo run:ios",
    "android": "expo run:android",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "e2e:build:ios": "detox build --configuration ios.sim.debug",
    "e2e:build:android": "detox build --configuration android.emu.debug",
    "e2e:test:ios": "detox test --configuration ios.sim.debug",
    "e2e:test:android": "detox test --configuration android.emu.debug",
    "test:contract": "jest --config jest.contract.config.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "generate:types": "openapi-typescript ../specs/001-boardingpass-api/contracts/openapi.yaml --output src/types/api.ts",
    "validate:spec": "openapi-generator-cli validate -i ../specs/001-boardingpass-api/contracts/openapi.yaml",
    "clean": "rm -rf node_modules ios android .expo",
    "prebuild": "expo prebuild"
  },
  "dependencies": {
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "axios": "^1.6.2",
    "expo": "~51.0.0",
    "expo-barcode-scanner": "~13.0.0",
    "expo-camera": "~15.0.0",
    "expo-crypto": "~13.0.0",
    "expo-dev-client": "~4.0.0",
    "expo-router": "~3.5.0",
    "expo-secure-store": "~13.0.0",
    "expo-status-bar": "~1.12.0",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-paper": "^5.11.3",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "~3.31.1",
    "react-native-zeroconf": "^0.13.8",
    "secure-remote-password": "^0.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@expo/config-plugins": "~8.0.0",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@react-native/eslint-config": "^0.74.0",
    "@react-native/metro-config": "^0.74.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.2",
    "@types/jest": "^29.5.11",
    "@types/react": "~18.2.45",
    "@types/react-native": "~0.73.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "detox": "^20.14.8",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-expo": "~51.0.0",
    "openapi-typescript": "^6.7.3",
    "prettier": "^3.1.1",
    "react-native-reanimated": "~3.10.1",
    "typescript": "~5.9.0"
  },
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
