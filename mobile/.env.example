# BoardingPass Mobile App - Environment Configuration
# Copy this file to .env and adjust values as needed

# Device Discovery Settings
EXPO_PUBLIC_DEFAULT_DEVICE_PORT=9443
EXPO_PUBLIC_FALLBACK_IP=192.168.1.100
EXPO_PUBLIC_MDNS_SERVICE_NAME=_boardingpass._tcp

# Session Settings
EXPO_PUBLIC_SESSION_TIMEOUT_MINUTES=30

# Network Settings
EXPO_PUBLIC_HTTPS_ONLY=true
EXPO_PUBLIC_REQUEST_TIMEOUT_MS=30000

# Development Settings
EXPO_PUBLIC_DEBUG_LOGGING=false
EXPO_PUBLIC_MOCK_API=false

# Note: All environment variables must be prefixed with EXPO_PUBLIC_
# to be accessible in the React Native app at runtime
